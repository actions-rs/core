{
    "private": false,
    "name": "@actions-rs/core",
    "version": "0.1.3",
    "author": "actions-rs",
    "license": "MIT",
    "description": "Core functionality for the @actions-rs repos",
    "main": "dist/core.js",
    "files": [
        "dist/**/*.js",
        "dist/**/*.js.map",
        "dist/**/*.d.ts"
    ],
    "scripts": {
        "build": "tsc -p .",
        "format": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
        "lint": "tsc --noEmit && eslint 'src/**/*.ts' '__tests__/**/*.ts'",
        "refresh": "rm -rf ./dist/* && npm run build",
        "test": "jest -c jest.config.json",
        "watch": "tsc -p . -w"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/actions-rs/core.git"
    },
    "bugs": {
        "url": "https://github.com/actions-rs/core/issues"
    },
    "dependencies": {
        "@actions/cache": "^0.2.1",
        "@actions/core": "^1.2.4",
        "@actions/exec": "^1.0.4",
        "@actions/github": "^2.2.0",
        "@actions/io": "^1.0.2",
        "@actions/tool-cache": "^1.3.4",
        "@octokit/graphql": "^4.4.0",
        "@octokit/rest": "^17.9.0",
        "semver": "^7.3.2"
    },
    "devDependencies": {
        "npm-check-updates": "^5.0.0",
        "@types/jest": "^25.2.1",
        "@types/node": "^13.13.5",
        "@types/semver": "^7.1.0",
        "@typescript-eslint/eslint-plugin": "^2.32.0",
        "@typescript-eslint/parser": "^2.32.0",
        "eslint": "^7.0.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "jest": "^26.0.1",
        "jest-circus": "^26.0.1",
        "prettier": "^2.0.5",
        "ts-jest": "^25.5.1",
        "typescript": "^3.8.3"
    }
}
